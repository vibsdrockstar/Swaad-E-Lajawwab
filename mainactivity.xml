<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibhor.swwaadelajawwab.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Swaad E Lajwwab"
        android:id="@+id/tvswad"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imug"
        android:src="@drawable/mughlaicuisine"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/tvswad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/b_next"
        android:onClick="openAboutUs"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imug"
        android:layout_marginBottom="43dp"
        android:layout_alignEnd="@+id/imug" />

</RelativeLayout>

   

